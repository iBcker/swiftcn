<%= link_to toggle_recomend_topic_path, {method: :put, remote: true, id:"topic-recomend-button",class:"admin #{active_class(topic.is_excellent)}"} do %>
  <i class="fa fa-trophy"></i>
<% end %>

<%= link_to toggle_wiki_topic_path, {method: :put, remote: true, id:"topic-wiki-button",class:"admin #{active_class(topic.is_wiki)}"} do %>
  <i class="fa fa-graduation-cap"></i>
<% end %>

<% if topic.order >= 0 %>
  <%= link_to toggle_pin_topic_path, {method: :put, id:"topic-pin-button",class:"admin #{active_class(topic.order > 0)}"} do %>
    <i class="fa fa-thumb-tack"></i>
  <% end %>
<% end %>

<% if topic.order <= 0 %>
  <%= link_to toggle_sink_topic_path, {method: :put, id:"topic-sink-button",class:"admin #{active_class(topic.order < 0)}"} do %>
    <i class="fa fa-anchor"></i>
  <% end %>
<% end %>

<%= link_to topic_path, {method: :delete,id:"topic-delete-button",class:"admin",data: { confirm: "Are you sure?" }} do %>
  <i class="fa fa-trash-o"></i>
<% end %>