<ul class="list-group row">

  <% @replies.each_with_index do |reply,index| %>
    <li class="list-group-item media" <%= reply.votes_count >= 2 ? 'style="margin-top: 0px; background-color: #fffce9"' : 'style="margin-top: 0px;"' %> >

      <div class="avatar pull-left">
        <%= link_to reply.user do %>
            <%=image_tag(reply.user.avatar,size: "48", alt: reply.user.name, class:"media-object img-thumbnail avatar")%>
        <% end %>
      </div>

      <div class="infos">
        <div class="media-heading meta">
          <%= link_to reply.user.name,reply.user ,class:"remove-padding-left author"%>
          <span> •  </span>
          <abbr class="timeago" ><%= distance_of_time_in_words_to_now(reply.created_at) %></abbr>
          <span> •  </span>
          <% floorIndex = replyFloorFromIndex(index) %>
          <a name="reply<%=floorIndex%>" class="anchor" href="#reply<%=floorIndex%>" aria-hidden="true">#<%=floorIndex%></a>
          <span class="operate pull-right">
            <a data-method="post" id="reply-up-vote-{{ $reply->id }}" href="javascript:void(0);" data-url="{{ route('replies.vote', $reply->id) }}" title="{{ lang('Vote Up') }}">
               <i class="fa fa-thumbs-o-up" style="font-size:14px;"></i> <%= reply.votes_count > 0 ? reply.votes_count : '' %>
            </a>
            <span> •  </span>

            <% if can? :manage, reply %>
                <%=link_to reply,{method: :delete} do %>
                  <i class="fa fa-trash-o"></i>
                <% end %>
                <span> •  </span>
            <% end %>
            <a class="fa fa-reply" href="javascript:void(0)" onclick="replyOne('<%= reply.user.name %>');" title="回复 <%=reply.user.name%>"></a>
          </span>

        </div>

        <div class="media-body markdown-reply content-body">
          <%= reply.body %>
        </div>
      </div>

    </li>  
  <% end %>

</ul>