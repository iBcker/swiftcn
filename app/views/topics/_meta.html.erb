<div class="meta inline-block" >

  <%=link_to topic.node.name,topic.node,class: "remove-padding-left" %>
  •
  <%=link_to topic.user.name,topic.user,class: "remove-padding-left" %>
  •
  <%= lang('at') %> 
  <abbr class="timeago"><%= distance_of_time_in_words_to_now topic.created_at %>前</abbr>
  •
  <% if topic.replies_count>0 %>
    <%= lang('Last Reply by') %>
    <%= link_to topic.last_reply_user.try(:name),topic.last_reply_user %>
    <%= lang('at') %>
    <abbr class="timeago"><%= distance_of_time_in_words_to_now topic.updated_at %>前</abbr>
  <% end %>

  <%= "#{topic.view_count} #{lang('Reads')}" %>
</div>
<div class="clearfix"></div>