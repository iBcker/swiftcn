<div class="modal fade" id="append-modal" tabindex="-1" role="" aria-labelledby="append-modal-label" >
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="append-modal-label"><%= lang('site.Append Content') %></h4>
      </div>

      <%=form_tag append_topic_path(topic) do %>
        <div class="modal-body">

          <div class="alert alert-warning">
              <%= lang('site.append_notice') %>
          </div>

          <div class="form-group">
            <%=text_area :append,:body_original,{'class' => 'form-control',
                                       'style' => 'min-height:20px',
                                       'placeholder' => lang('site.Please using markdown'),
                                       'cols' => '50',
                                       'row' => '10',
                                       'required'=>'true'
                                        }%>
          </div>

          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal"><%= lang('site.Close') %></button>
            <button type="submit" class="btn btn-primary"><%= lang('site.Submit') %></button>
          </div>
      <% end %>
    </div>
  </div>
</div>
