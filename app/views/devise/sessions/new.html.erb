<div class="row">
  <%=raw display_alert %>
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= lang('site.Login') %></h3>
      </div>
      <div class="panel-body">
        
        <div id='login_with_github_row'>
          <%=link_to lang('site.Login with Github') ,user_omniauth_authorize_url(:github, host: Settings.HOST),data: { disable_with: "Please wait..." },class:"btn btn-lg btn-success btn-block" %>

          <div class="row" style="margin-top: 10px">
            <div class="col-md-4 pull-right text-right">
              <a id="login_with_email_btn" href="#">邮箱登录</a>
            </div>
          </div>
        </div>

        <div style="display: none;" id='login_with_email_row'>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email,lang('site.Emial') %><br />
              <%= f.email_field :email, class:'form-control',required:true, autofocus: true %>
            </div>

            <div class="form-group">
              <%= f.label :password,lang('site.password') %><br />
              <%= f.password_field :password,class:'form-control',required:true, autocomplete: "off" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <%= f.check_box :remember_me,checked:true %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="form-group">
              <%= f.submit lang('site.Log in'),class:"btn btn-lg btn-success btn-block" %>
            </div>
          <% end %>
          <div class="row" style="margin-top: 10px">
            <div class="col-md-4 pull-right text-right">
              <a id="login_with_github_btn" href="#">GitHub登录</a>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function(){
 $('#login_with_email_btn').click(function(){
    $('#login_with_email_row').slideDown()
    $('#login_with_github_row').slideUp()
  })
  $('#login_with_github_btn').click(function(){
    $('#login_with_github_row').slideDown()
    $('#login_with_email_row').slideUp()
  })
});
</script>

