<ul class="list-group">
  <% replies.each do |reply| %>
    <li class="list-group-item">
      <%if reply.topic.present? %>
          <%= link_to reply.topic.title.truncate(80),topic_path_append_reply(reply.topic,reply),class:'remove-padding-left' %>
          <span class="meta">
             <%=lang('site.at')%> <span class="timeago"><%= reply.created_at %></span>
          </span>
          <div class="reply-body markdown-reply content-body">
            <%=raw reply.body %>
          </div>
      <% else %>
        <div class="deleted text-center"><%= lang('site.Data has been deleted') %></div>
      <% end %>
    </li>
  <% end %>
</ul>
